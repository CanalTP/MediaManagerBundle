{% extends '::base.html.twig' %}

{% block body %}
<h1>{{ 'list.title'|trans({}, 'CanalTPMediaManagerBundle') }}</h1>

<h3>{{ 'list.category.logo'|trans({}, 'CanalTPMediaManagerBundle') }} ({{ logoCategory.getMediaNumber() }})</h3>
<table border="1" width="1200px">
    <tr>
        <td>Filename</td>
        <td>Basename</td>
        <td>Path</td>
        <td>Size</td>
        <td>Company</td>
        <td>Category</td>
        <td>Actions</td>
    </tr>
    {% for media in logos %}
    <tr>
        <td>{{ media.getFileName() }}</td>
        <td>{{ media.getBaseName() }}</td>
        <td>{{ media.getPath() }}</td>
        <td>{{ media.getSize() }}</td>
        <td>{{ media.getCompany().getName() }}</td>
        <td>{{ media.getCategory().getName() }}</td>
        <td>
            <a href="{{ path('canal_tp_media_manager_delete_media', { 'type': media.getCategory().getId(), 'basename': media.getBaseName() }) }}">
                {{ 'list.media.delete'|trans({}, 'CanalTPMediaManagerBundle') }}
            </a>
        </td>
    </tr>
    {% endfor %}
</table>

<h3>{{ 'list.category.network'|trans({}, 'CanalTPMediaManagerBundle') }} ({{ networkCategory.getMediaNumber() }})</h3>
<table border="1" width="1200px">
    <tr>
        <td>Filename</td>
        <td>Basename</td>
        <td>Path</td>
        <td>Size</td>
        <td>Company</td>
        <td>Category</td>
        <td>Actions</td>
    </tr>
    {% for media in networks %}
    <tr>
        <td>{{ media.getFileName() }}</td>
        <td>{{ media.getBaseName() }}</td>
        <td>{{ media.getPath() }}</td>
        <td>{{ media.getSize() }}</td>
        <td>{{ media.getCompany().getName() }}</td>
        <td>{{ media.getCategory().getName() }}</td>
        <td>
            <a href="{{ path('canal_tp_media_manager_delete_media', { 'type': media.getCategory().getId(), 'basename': media.getBaseName() }) }}">
                {{ 'list.media.delete'|trans({}, 'CanalTPMediaManagerBundle') }}
            </a>
        </td>
    </tr>
    {% endfor %}
</table>

{% endblock %}
